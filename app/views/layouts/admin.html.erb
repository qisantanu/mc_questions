<!DOCTYPE html>
<html>
  <head>
    <title>MCQ Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-100">
    <nav class="bg-white shadow-sm border-b">
      <div class="max-w-7xl mx-auto px-4">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <%= link_to "MCQ Admin", admin_root_path, class: "text-xl font-bold text-gray-900" %>
          </div>
          <div class="flex items-center space-x-4">
            <%= link_to "Dashboard", admin_root_path, class: "text-gray-700 hover:text-gray-900" %>
            <%= link_to "Questions", admin_questions_path, class: "text-gray-700 hover:text-gray-900" %>
            <%= link_to "Logout", logout_path, method: :delete, class: "text-gray-700 hover:text-gray-900" %>
          </div>
        </div>
      </div>
    </nav>

    <main class="py-8">
      <% if notice %>
        <div class="max-w-7xl mx-auto px-4 mb-4">
          <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
            <%= notice %>
          </div>
        </div>
      <% end %>
      
      <% if alert %>
        <div class="max-w-7xl mx-auto px-4 mb-4">
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
            <%= alert %>
          </div>
        </div>
      <% end %>
      
      <%= yield %>
    </main>
  </body>
</html>
