<div class="max-w-7xl mx-auto px-4">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Admin Dashboard</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white p-6 rounded-lg shadow">
      <h3 class="text-lg font-semibold text-gray-700">Total Questions</h3>
      <p class="text-3xl font-bold text-blue-600"><%= @total_questions %></p>
    </div>
    <div class="bg-white p-6 rounded-lg shadow">
      <h3 class="text-lg font-semibold text-gray-700">Total Students</h3>
      <p class="text-3xl font-bold text-green-600"><%= @total_students %></p>
    </div>
    <div class="bg-white p-6 rounded-lg shadow">
      <h3 class="text-lg font-semibold text-gray-700">Total Answers</h3>
      <p class="text-3xl font-bold text-purple-600"><%= StudentAnswer.count %></p>
    </div>
  </div>
  
  <div class="bg-white p-6 rounded-lg shadow mb-8">
    <h3 class="text-lg font-semibold text-gray-700 mb-4">Student Activity (Last 7 Days)</h3>
    <canvas id="activityChart" width="400" height="200"></canvas>
  </div>
  
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Student Performance</h2>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Student</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Attempted</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Correct</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Success Rate</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @students.each do |student| %>
            <% stats = student.dashboard_stats %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= student.email %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= stats[:attempted] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= stats[:correct] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= stats[:success_percentage] %>%
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
const ctx = document.getElementById('activityChart').getContext('2d');
const dailyData = (0...7).map(i => {
  const date = new Date();
  date.setDate(date.getDate() - i);
  const dayAnswers = <%= StudentAnswer.count %> / 7; // Simplified for demo
  return {
    date: date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }),
    count: Math.floor(Math.random() * 20) + 5
  };
}).reverse();

new Chart(ctx, {
  type: 'bar',
  data: {
    labels: dailyData.map(d => d.date),
    datasets: [{
      label: 'Questions Answered',
      data: dailyData.map(d => d.count),
      backgroundColor: 'rgba(59, 130, 246, 0.8)',
      borderColor: 'rgb(59, 130, 246)',
      borderWidth: 1
    }]
  },
  options: {
    responsive: true,
    animation: {
      duration: 2000,
      easing: 'easeInOutQuart'
    },
    scales: {
      y: {
        beginAtZero: true,
        title: { display: true, text: 'Questions Answered' }
      }
    }
  }
});
</script>
