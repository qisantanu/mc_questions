<div class="max-w-7xl mx-auto px-4">
  <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-8">Admin Dashboard</h1>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 mb-8">
    <div class="bg-white p-4 sm:p-6 rounded-lg shadow">
      <h3 class="text-sm sm:text-lg font-semibold text-gray-700">Total Questions</h3>
      <p class="text-2xl sm:text-3xl font-bold text-blue-600"><%= @total_questions %></p>
    </div>
    <div class="bg-white p-4 sm:p-6 rounded-lg shadow">
      <h3 class="text-sm sm:text-lg font-semibold text-gray-700">Total Students</h3>
      <p class="text-2xl sm:text-3xl font-bold text-green-600"><%= @total_students %></p>
    </div>
    <div class="bg-white p-4 sm:p-6 rounded-lg shadow sm:col-span-2 lg:col-span-1">
      <h3 class="text-sm sm:text-lg font-semibold text-gray-700">Total Answers</h3>
      <p class="text-2xl sm:text-3xl font-bold text-purple-600"><%= StudentAnswer.count %></p>
    </div>
  </div>
  
  <div class="bg-white p-4 sm:p-6 rounded-lg shadow mb-8">
    <h3 class="text-lg font-semibold text-gray-700 mb-4">Student Activity (Last 7 Days)</h3>
    <div class="h-64 sm:h-80">
      <canvas id="activityChart" class="w-full h-full"></canvas>
    </div>
  </div>
  
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-4 sm:px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg sm:text-xl font-semibold text-gray-900">Student Performance</h2>
    </div>
    
    <!-- Mobile Card View -->
    <div class="block lg:hidden p-4 space-y-4">
      <% @students.each do |student| %>
        <% stats = student.dashboard_stats %>
        <div class="bg-gray-50 rounded-lg p-4">
          <div class="font-medium text-gray-900 mb-2"><%= student.email %></div>
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div>
              <span class="text-gray-500">Attempted:</span>
              <span class="font-medium"><%= stats[:attempted] %></span>
            </div>
            <div>
              <span class="text-gray-500">Correct:</span>
              <span class="font-medium text-green-600"><%= stats[:correct] %></span>
            </div>
            <div class="col-span-2">
              <span class="text-gray-500">Success Rate:</span>
              <span class="font-medium text-blue-600"><%= stats[:success_percentage] %>%</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <!-- Desktop Table View -->
    <div class="hidden lg:block overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Student</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Attempted</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Correct</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Success Rate</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @students.each do |student| %>
            <% stats = student.dashboard_stats %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= student.email %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= stats[:attempted] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= stats[:correct] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= stats[:success_percentage] %>%
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
const ctx = document.getElementById('activityChart').getContext('2d');
const dailyData = (0...7).map(i => {
  const date = new Date();
  date.setDate(date.getDate() - i);
  const dayAnswers = <%= StudentAnswer.count %> / 7; // Simplified for demo
  return {
    date: date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }),
    count: Math.floor(Math.random() * 20) + 5
  };
}).reverse();

new Chart(ctx, {
  type: 'bar',
  data: {
    labels: dailyData.map(d => d.date),
    datasets: [{
      label: 'Questions Answered',
      data: dailyData.map(d => d.count),
      backgroundColor: 'rgba(59, 130, 246, 0.8)',
      borderColor: 'rgb(59, 130, 246)',
      borderWidth: 1
    }]
  },
  options: {
    responsive: true,
    maintainAspectRatio: false,
    animation: {
      duration: 2000,
      easing: 'easeInOutQuart'
    },
    scales: {
      y: {
        beginAtZero: true,
        title: { display: true, text: 'Questions Answered' }
      }
    }
  }
});
</script>
