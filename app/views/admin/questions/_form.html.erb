<%= form_with model: [:admin, @question], local: true, class: "space-y-6" do |form| %>
  <% if @question.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <ul>
        <% @question.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :content, "Question", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :content, rows: 4, class: "mt-1 block w-full border border-gray-300 rounded-md px-3 py-2" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= form.label :option_a, "Option A", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :option_a, class: "mt-1 block w-full border border-gray-300 rounded-md px-3 py-2" %>
    </div>
    <div>
      <%= form.label :option_b, "Option B", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :option_b, class: "mt-1 block w-full border border-gray-300 rounded-md px-3 py-2" %>
    </div>
    <div>
      <%= form.label :option_c, "Option C", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :option_c, class: "mt-1 block w-full border border-gray-300 rounded-md px-3 py-2" %>
    </div>
    <div>
      <%= form.label :option_d, "Option D", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :option_d, class: "mt-1 block w-full border border-gray-300 rounded-md px-3 py-2" %>
    </div>
  </div>

  <div>
    <label class="block text-sm font-medium text-gray-700 mb-2">Correct Options</label>
    <div class="space-y-2">
      <% %w[A B C D].each do |option| %>
        <label class="flex items-center">
          <%= check_box_tag "question[correct_options][]", option, 
                            @question.correct_options.include?(option), 
                            class: "mr-2" %>
          <span>Option <%= option %></span>
        </label>
      <% end %>
    </div>
  </div>

  <div class="flex justify-end space-x-4">
    <%= link_to "Cancel", admin_questions_path, class: "bg-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-400" %>
    <%= form.submit class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700" %>
  </div>
<% end %>
