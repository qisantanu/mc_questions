<div class="min-h-screen flex items-center justify-center bg-gray-50">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Sign in</h2>
    </div>
    <%= form_with url: login_path, local: true, class: "mt-8 space-y-6" do |form| %>
      <div>
        <%= form.email_field :email, placeholder: "Email", required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
      </div>
      <div>
        <%= form.password_field :password, placeholder: "Password", required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
      </div>
      <div>
        <%= form.submit "Sign in", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>
</div>
