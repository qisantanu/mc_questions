<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-4 px-4">
  <div class="max-w-2xl mx-auto">
    <!-- Progress Header -->
    <div class="bg-white rounded-t-xl shadow-lg p-4 mb-0">
      <div class="flex items-center justify-between mb-2">
        <h2 class="text-lg font-bold text-gray-800">ðŸ“š Question Time!</h2>
        <div class="flex items-center space-x-4">
          <div class="text-right">
            <div class="text-xs text-gray-600">Time Left</div>
            <div id="timer" class="text-xl font-bold text-red-600">1:00</div>
          </div>
          <div class="flex items-center space-x-2">
            <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
            <span class="text-sm text-gray-600">Live</span>
          </div>
        </div>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-gradient-to-r from-blue-500 to-purple-600 h-2 rounded-full animate-pulse" style="width: <%= rand(30..90) %>%"></div>
      </div>
    </div>
    
    <!-- Question Card -->
    <div class="bg-white shadow-lg p-6 mb-0 border-l-4 border-blue-500">
      <div class="mb-6">
        <div class="flex items-center mb-4">
          <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold text-sm mr-3">
            Q
          </div>
          <h3 class="text-xl font-semibold text-gray-800">Question</h3>
        </div>
        <p class="text-lg text-gray-800 leading-relaxed mb-6 p-4 bg-gray-50 rounded-lg border-l-4 border-blue-300">
          <%= simple_format(@question.content.gsub(/\*\*(.*?)\*\*/, '<strong>\1</strong>').html_safe) %>
        </p>
        
        <% if @question.image.attached? %>
          <div class="mb-6 text-center">
            <%= image_tag @question.image, class: "max-w-full rounded-lg border shadow-md mx-auto" %>
          </div>
        <% end %>
        
        <%= form_with url: answer_question_path(@question), local: true, class: "space-y-3" do |form| %>
          <div class="grid gap-3">
            <% %w[A B C D].each_with_index do |option, index| %>
              <% option_text = @question.send("option_#{option.downcase}") %>
              <% if option_text.present? %>
                <label class="group relative flex items-center p-4 border-2 border-gray-200 rounded-xl hover:border-blue-300 hover:bg-blue-50 cursor-pointer transition-all duration-200 transform hover:scale-[1.02] hover:shadow-md">
                  <%= check_box_tag "selected_options[]", option, false, class: "sr-only peer" %>
                  <div class="w-6 h-6 border-2 border-gray-300 rounded-full mr-4 flex items-center justify-center peer-checked:border-blue-500 peer-checked:bg-blue-500 transition-all duration-200">
                    <div class="w-2 h-2 bg-white rounded-full opacity-0 peer-checked:opacity-100 transition-opacity duration-200"></div>
                  </div>
                  <div class="flex-1">
                    <div class="flex items-center">
                      <span class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-full flex items-center justify-center font-bold text-sm mr-3">
                        <%= option %>
                      </span>
                      <span class="text-gray-800 font-medium"><%= option_text %></span>
                    </div>
                  </div>
                  <div class="absolute inset-0 border-2 border-transparent rounded-xl peer-checked:border-blue-500 peer-checked:bg-blue-50 pointer-events-none transition-all duration-200"></div>
                </label>
              <% end %>
            <% end %>
          </div>
          
          <div class="pt-6">
            <%= form.submit "Submit Answer ðŸš€", class: "w-full bg-gradient-to-r from-blue-600 to-purple-600 text-white py-4 px-6 rounded-xl text-lg font-semibold hover:from-blue-700 hover:to-purple-700 transform hover:scale-[1.02] transition-all duration-200 shadow-lg hover:shadow-xl" %>
          </div>
        <% end %>
      </div>
    </div>
    
    <!-- Footer -->
    <div class="bg-white rounded-b-xl shadow-lg p-4 text-center">
      <%= link_to "â† Back to Dashboard", dashboard_path, class: "text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200" %>
    </div>
  </div>
</div>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
  
  input[type="checkbox"]:checked + div {
    background: linear-gradient(135deg, #3b82f6, #8b5cf6);
    border-color: #3b82f6;
  }
</style>

<script>
  let timeLeft = 60;
  const timerElement = document.getElementById('timer');
  
  const countdown = setInterval(() => {
    timeLeft--;
    const minutes = Math.floor(timeLeft / 60);
    const seconds = timeLeft % 60;
    timerElement.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
    
    if (timeLeft <= 10) {
      timerElement.classList.add('animate-pulse');
    }
    
    if (timeLeft <= 0) {
      clearInterval(countdown);
      
      // Submit failed attempt
      const form = document.createElement('form');
      form.method = 'POST';
      form.action = '<%= answer_question_path(@question) %>';
      
      const csrfToken = document.querySelector('meta[name="csrf-token"]').content;
      const csrfInput = document.createElement('input');
      csrfInput.type = 'hidden';
      csrfInput.name = 'authenticity_token';
      csrfInput.value = csrfToken;
      form.appendChild(csrfInput);
      
      document.body.appendChild(form);
      form.submit();
    }
  }, 1000);
</script>
